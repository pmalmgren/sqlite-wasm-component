{
    "compilerOptions": {
      "outDir": "build",
      "jsx": "react-jsx", // Support JSX in .tsx files
      "allowJs": true,
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ], // List of library files to be included in the compilation
      "module": "esnext", // Specify module code generation
      "moduleResolution": "node", // Resolve modules using Node.js style
      "target": "ES2016", // Specify ECMAScript target version,
    },
    "include": [
      "src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx" // *** The files TypeScript should type check ***
    ],
    "exclude": ["node_modules", "build", "src/wasm/imports/poll.d.ts", "src/worker/service-worker.ts"] // *** The files to not type check ***
  }